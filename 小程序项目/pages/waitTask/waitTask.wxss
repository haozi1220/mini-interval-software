/*头部标签页  */
.tabBox {
  height: 98rpx;
  border-top: 1px solid #eee;
  box-sizing: border-box;
}
.tabBox .tab_item {
  width: 108rpx;
  height: 98rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  line-height: 98rpx;
  color: #999;
}
.tabBox .empty_line {
  width: 1px;
  height: 58rpx;
  margin-top: 20rpx;
  background-color: #eee;
}
.tabBox .tabActive {
  color: #309afc;
  border-bottom: 6rpx solid #309afc;
}
/*日期选择器  */
